#!/bin/bash

uuencode=1
binary=0
hakemisto="/tmp/konttiraspi"
function untar_payload()
{
        rm -rf $hakemisto
        mkdir -p $hakemisto
        match=$(grep --text --line-number '^PAYLOAD:$' $0 | cut -d ':' -f 1)
        payload_start=$((match + 1))
        if [[ $binary -ne 0 ]]; then
                tail -n +$payload_start $0 | tar -xf - -C $hakemisto
        fi
        if [[ $uuencode -ne 0 ]]; then
                tail -n +$payload_start $0 | uudecode | tar -xf - -C $hakemisto
        fi
}
#### onko tarpeelliset paketit asennettu jo? ###
paketit=(moreutils sharutils dialog)
sudo apt update
for paketti in "${paketit[@]}";do
    asennettu=$(dpkg -l "$paketti" |tail -n 1 |grep "^un")
    if [[ ${#asennettu} != 0 ]];then
        echo Asennetaan paketti $paketti
        sudo apt install -y $paketti
    fi
done

untar_payload
cd $hakemisto/deb
chmod a+x asenna
./asenna
exit 0

